<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginBottom="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scroll_background"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/scrollitem_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/scrollitem_image"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:background="@drawable/scrollitem_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/scrollitem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Placeholder"
            android:fontFamily="monospace"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scrollitem_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scrollitem_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="monospace"
            android:text="Abu Dhabi, Somewhere Where\nPRICE GOES HERE\nSQUARE FEET GOES HERE"
            android:textColor="@color/white"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/scrollitem_image"
            app:layout_constraintTop_toBottomOf="@+id/scrollitem_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>